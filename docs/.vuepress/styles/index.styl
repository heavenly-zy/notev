// 鼠标指针
body
  cursor: url('/pointer/default.cur'), auto;
body
  .banner
    .container
      cursor: url('/pointer/default.cur'), auto;
.container
  aside
    .info-card
      .info-card-body
        cursor: url('/pointer/default.cur'), auto;
a, button, #goTop, .jump, h1
  cursor: url('/pointer/link.cur'), auto;

// 标题
.header
  .banner
    .container
      h1
        text-shadow 2px 2px 1px #888

// 隐藏原有返回顶部按钮
.go-to-top
  display none
